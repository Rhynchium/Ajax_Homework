
@{
    ViewData["Title"] = "作業1";
}

<h1>作業1</h1>
<span>
    @Html.ActionLink("回到主頁", "Index", "Home", null, new { @class="btn btn-warning"})
</span>
<hr />
<div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>姓名</th>
                <th>年資</th>
                <th>薪水</th>
            </tr>
        </thead>
        <tbody id="hw1">
        </tbody>
    </table>
</div>


@section Scripts{
    <script>
        const emp = {
            "employees": [
                { "name": "Tom", "workYears": 3, "salary": 35000 },
                { "name": "Jack", "workYears": 5, "salary": 40000 },
                { "name": "Mary", "workYears": 7, "salary": 45000 }
            ]};

        let datas = "";
        emp.employees.forEach(e => {
            const { name, workYears, salary } = e;
            const data =
                `<tr>
                                <td>${name}</td>
                                <td>${workYears}</td>
                                <td>${salary}</td>
                            </tr>`;
            datas += data;
        })
        $("#hw1").append(datas);
    </script>
    }

